{
  "name": "better-buddy-share-backend",
  "private": "true",
  "scripts": {
    "typecheck": "bunx tsc -p tsconfig.json --noEmit",
    "dev": "bun --hot src/index.ts",
    "db": "bunx prisma migrate deploy",
    "minify": "bun run typecheck && bun build src/index.ts --target bun --outdir .dist --minify --sourcemap",
    "prod": "bun run db && bun run --bun .dist/index.js",
    "docs": "typedoc && bun run scripts/fix-wiki-links.js",
    "docs:wiki": "typedoc --options typedoc.json --out docs/wiki --plugin typedoc-plugin-markdown && bun run scripts/fix-wiki-links.js"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.2",
    "@prisma/client": "^6.18.0",
    "hono": "^4.10.4",
    "lodash": "^4.17.21",
    "rabbitmq-client": "^5.0.5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/lodash": "^4.17.20",
    "@types/swagger-ui-dist": "^3.30.6",
    "mermaid": "^11.12.1",
    "prisma": "^6.18.0",
    "tsconfig-paths": "^4.2.0",
    "typedoc": "^0.28.14",
    "typedoc-plugin-dt-links": "^2.0.26",
    "typedoc-plugin-markdown": "^4.9.0",
    "typedoc-plugin-mdn-links": "^5.0.10"
  }
}
